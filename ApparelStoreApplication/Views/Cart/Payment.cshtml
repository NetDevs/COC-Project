    <script>
        $('#paydiv').hide();
        $('#cod').hide();
        $('#ccdiv').hide();
        $('input[type=radio]').change(function (e) {

            if ($(e.target).val() == "DC") {
                $('#paydiv').show();
                $('#ccdiv').hide();
                $('#cod').hide();
            }
            else if ($(e.target).val() == "CC") {
                $('#ccdiv').show();
                $('#paydiv').hide();
                $('#cod').hide();
            }
            else  {
                $('#ccdiv').hide();
                $('#paydiv').hide();
                $('#cod').show();
            }
        });
                
    </script>
