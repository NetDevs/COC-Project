@{
    ViewData["Title"] = "Index";
}
<style>
    .panel {
        width: 250px;
        height: 200px;
        position: relative;
        float: right;
        padding-right: 10px;
        opacity: 0.5;
    }
</style>
<html>
<body>
    <div>
        <br />
        <center><b><h6 style="font-family:Vivaldi; font-size:100px">Apparel Store</h6></b></center>
        <br />
        <br />
    </div>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/advertisement-advertising-boutique-1051744.jpg" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                        <a class="btn btn-default" href="http://localhost:50816/Admin/Login">
                            Click to Buy
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/mandalay-bay-retail-resort-shops-shopping-bags.tif" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                        <a class="btn btn-default" href="http://localhost:50816/Admin/Login">
                            Click to Buy
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/fashion-friends-friendship-1345082.jpg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>

                        <a class="btn btn-default" href="http://localhost:50816/Admin/Login">
                            Click to Buy
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="container-fluid text-center bg-grey">
        <h2>What we Offer...</h2><br>
        <h4>What we have created</h4>
        <div class="row text-center">
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="~/images/image 11.jpg" alt="Paris" width="400" height="300">
                    <p><strong>Women's Fashion</strong></p>
                    
                </div>
            </div>
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="~/images/image 10.jpg" alt="New York" width="400" height="300">
                    <p><strong>Men's Fashion</strong></p>
                    
                </div>
            </div>
            <div class="col-sm-4">
                <div class="thumbnail">
                    <img src="~/images/image 12.jpg" alt="San Francisco" width="400" height="300">
                    <p><strong>New Arrivals</strong></p>
                    
                </div>
            </div>
        </div>
    </div>

</body>
</html>