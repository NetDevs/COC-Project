@using ApparelStoreWebService.Models.DB;
@model ProductViewModel
@{
    ViewData["Title"] = "GetProducts";
}

@{ 
    List<ProductViewModel> Model = (List<ProductViewModel>)ViewBag.product;
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <input type="submit" value="VIEW CART" class="btn-dark" onclick="@("window.location.href='" + @Url.Action("ViewCart", "Cart") + "'")" />
        </div>
    </div>
</div>

<div class="album py-5 bg-light">
    <div class="col-md-12">
        <div class="row">
            @*<div class="col-md-5">*@
            @for (int i = 0; i < Model.Count; i++)
            {
           
                <form asp-action="AddToCart" asp-controller="Cart" method="post">

                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <div class="col-md-2 column productbox">
                                <img src="@Model[i].ProductImage" alt="Card image cap" width="300" height="300"><input type="hidden" name="ProductImage" value="@Model[i].ProductImage" class="img-responsive" />
                                <div class="card-body">
                                    <table>
                                        <tr>
                                            <td>
                                                <label>@Model[i].Title </label>
                                                <input type="hidden" name="Title" value="@Model[i].Title" />
                                            </td>
                                              <td>
                                                        <div class="col-md-2 order-div">
                                                        <input type="submit" class="btn btn-success" value="AddToCart" />
                                                        </div>
                                              </td>
                                        </tr>
                                        <tr>
                                            <td>
                                                <label>@Model[i].Price</label>
                                                <input type="hidden" name="Price" value="@Model[i].Price" /><t />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>

                </form>
            
                <input type="hidden" name="ProductId" value="@Model[i].ProductId" />
                <input type="hidden" name="Title" value="@Model[i].CategoryId" />
                <input type="hidden" name="Title" value="@Model[i].SubCategoryId" />
                <div class="d-flex justify-content-between align-items-center"></div>
            }
            <div>
            </div>
        </div>
        <div class="col-md-4"></div>
    </div>
    </div>



